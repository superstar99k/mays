@charset "utf-8"

i.icon
	display inline-block
	font-style normal
	font-family 'New Normal Icon'
	line-height 1

._2column
	font-size 24px
	line-height 40px
	margin-left auto
	margin-right auto
	padding 120px 32px
.sub-column
	margin 80px 0 0

h2.blog-index-heading
	font-weight 700
	font-size 28px
	line-height 40px
	& + div.blog-index
		margin-top 20px

a.blog-index-item
	position relative
	background #fff
	color #111
	display block
	& + a.blog-index-item
		margin 48px 0 0
	> article
		> picture
			display block
			> img
				max-width 100%
		> .txt
			padding 15px 10px
			> time
				display block
				text-align center
				font-family 'Lato', sans-serif
				letter-spacing 0.1em
			> p
				margin 8px 0 0
			> ul
				color #898989
				font-size 18px
				line-height 24px
				margin 8px 0 0
				> li
					background #7b7b7b
					border-radius 4px
					color #fff
					display inline-block
					margin 4px 4px 0 0
					padding 2px 14px 3px
	> span.rank
		position absolute
		width 56px
		height 56px
		left 0
		top 0
		background #404040
		color #fff
		font-size 32px
		line-height 56px
		text-align center

/* Hero */
.blog-heros
	display grid
	grid-template-rows repeat(3, auto)
	grid-template-columns repeat(2, 50%)
	grid-template-areas "main main" "sub1 sub2" "sub3 sub4"
	gap 0 0

a.blog-hero-item
	position relative
	display block
	&:first-child
		grid-area main
	&:nth-child(2)
		grid-area sub1
	&:nth-child(3)
		grid-area sub2
	&:nth-child(4)
		grid-area sub3
	&:last-child
		grid-area sub4
	> picture
		display block
		overflow hidden
		> img
			width 100%
	> .ttl
		position absolute
		width 100%
		left 0
		bottom 0
		background rgba(255,255,255,.8)
		color #111
		font-weight 600
		font-size 21px
		line-height 30px
		padding 10px 16px 8px
		> strong
			display -webkit-box
			-webkit-line-clamp 2
			-webkit-box-orient vertical
			overflow hidden
	&:first-child
		> .ttl
			font-size 28px
			line-height 40px
			padding 20px

/* Pagination */
nav.pagination
	margin 36px 0 0
	> h2
		display none
.nav-links
	font-size 21px
	line-height 1
	text-align center
	> .page-numbers
		min-width 40px
		border-radius 3px
		color #111
		display inline-block
		font-weight 400
		margin 12px 8px 0
		padding 8px 4px
		text-align center
	> a.page-numbers,
	> span.dots
		border 1px solid #BABCBC
		background #fff 
	> span.page-numbers.current
		background #111
		color #fff

/* Single */
article.blog-single
	> h1
		font-size 40px
		line-height 60px

ul.blog-meta
	margin 20px -16px 0 0
	> li
		display inline-block
		& + li
			margin 0 0 0 16px
		> i.icon
			color #6a6a6a
			font-size 28px
			vertical-align baseline
.blog-tags
	position relative
	padding 0 0 0 38px
	> i.icon
		@extend ul.blog-meta > li > i.icon
		position absolute
		left 0
		top 25px
	> ul
		> li
			display inline-block
			margin 20px 5px 0 0
			> a
				background #7B7B7B
				border-radius 4px
				color #fff
				display inline-block
				font-size 18px !important
				padding 2px 14px 3px
				text-align center

/* Body content */
.blog-body-content
	margin 60px 0 0
	> :first-child
		margin-top 0
	h1, h2, h3, h4, h5, h6, ul, ol
		clear both
	h2
		font-size 32px
		font-weight 400
		line-height 48px
		margin 60px 0 40px
	h3
		font-size 28px
		font-weight 300
		line-height 40px
		margin 40px 0 32px
	h4, h5, h6, p, ul, ol
		margin 32px 0 0
	> p
		text-align justify
		&.lead
			background #E7E3DC
			color #444
			padding 1em 1.5em
	ul
		list-style disc
		padding 0 0 0 1.5em
	ol
		list-style decimal
	li
		margin 1px 0 0
	> ul > li, > ol > li
		&:first-child
			margin-top 0
	> .wp-block-image
		margin 20px 0 0
		text-align center
		figure
			margin-top 0
			margin-bottom 0
		figcaption
			margin 5px 0 0
	img
		height auto
		vertical-align bottom
	a
		word-break break-all
		word-wrap break-word
		&:hover
			text-decoration underline
	table
		width 100%
		td
			&:first-child
				width 120px
	> :last-child
		margin-bottom 0

/* Footer */
article.blog-single > footer
	position relative
	border-top 1px solid #212121
	margin 80px 0 0

.sns-btns
	display flex
	font-size 28px
	margin 20px 0 0
	> a
		color #fff
		display block
		width 48px
		height 48px
		border-radius 50%
		padding 10px 0 0
		text-align center
		transition opacity .1s linear
		&:nth-child(n+2)
			margin 0 0 0 4px
		&.fb
			background #3b5998
		&.tw
			background #55acee
		&.hb
			background #00a5de
		&.pk
			background #ef3f56
		&:hover
			opacity .7

/* Related posts */
aside.related-posts
	margin 50px 0 0
	> .blog-index
		margin 20px 0 0

/* Back to index */
.blog-back-to-index
	margin 50px 0 0
	text-align center

/* Sidebar */
aside.blog-sidebar
	> section
		&:nth-child(n+2)
			margin 40px 0 0
		> h2
			font-weight 700
			font-size 28px
			line-height 40px
			text-align center

section.widget
	> p
		margin 20px 0 0
		text-align right
		> a
			display inline-block
			color #111
			&:after
				width 12px
				height 12px
				border-top 3px solid #222
				border-right 3px solid #222
				content ''
				display inline-block
				margin 0 0 0 4px
				transform rotate(45deg)
				vertical-align baseline

ol.wpp-list
	counter-reset li
	font-size 21px
	line-height 30px
	> li
		position relative
		margin 0
		padding 20px 0
		& + li
			border-top 1px solid #BABCBC
		&:before
			position absolute
			width 30px
			height 30px
			left 10px
			top 30px
			background #555
			border-radius 50%
			color #fff
			font-weight 600
			font-sizse 12px
			text-align center
			content counter(li)
			counter-increment li
			z-index 2
		> a
			color #111
			display flex
			align-items center
			> img
				width 96px
				height auto
			> span.ttl
				-webkit-line-clamp 2
				-webkit-box-orient vertical
				display -webkit-box
				flex 1
				margin 0 0 0 10px
				overflow hidden

ul.wp-tag-cloud
	margin 4px 0 0
	> li
		display inline-block
		margin 10px 2px 0
		> a
			@extend .blog-tags > ul > li > a

/* Tag List */
ul.blog-tag-list
	margin 4px 0 0
	> li
		display inline-block
		margin 10px 2px 0
		> a
			@extend .blog-tags > ul > li > a
			> small
				color #ccc
				font-size 18px
				vertical-align baseline
 